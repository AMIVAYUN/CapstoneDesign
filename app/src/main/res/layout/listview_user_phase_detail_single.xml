<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:id="@+id/img_userphase_Champ"
            android:layout_marginTop="5dp"/>
        <TableLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <TableRow
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_user_phase_detail_spell1"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_user_phase_detail_spell2"/>
            </TableRow>
            <TableRow
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_user_phase_detail_rune1"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_user_phase_detail_rune2"/>

            </TableRow>
            

        </TableLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:id="@+id/text_user_phase_detail_name"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="25dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_user_phase_detail_tier"/>
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:id="@+id/text_user_phase_detail_tiername"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:id="@+id/text_user_phase_detail_kda"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:id="@+id/text_user_phase_detail_cs"
                android:textSize="15dp"/>

        </LinearLayout>
        <TableLayout
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item0"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    />

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"

                    />

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:contentDescription="@string/user_phase_item_img"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:contentDescription="@string/user_phase_item_img"
                   />

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"

                    android:contentDescription="@string/user_phase_item_img"
                    />

                <ImageView
                    android:id="@+id/img_user_phase_detail_Item5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#DBB1FF"
                    android:contentDescription="@string/user_phase_item_img" />

            </TableRow>
        </TableLayout>





    </LinearLayout>

</LinearLayout>